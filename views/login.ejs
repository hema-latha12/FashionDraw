<!DOCTYPE html>
<html>
<head>
  <title>Login - FashonDraw</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #fde6f4 0%, #f9f6fb 100%);
    }
    .login-split {
      min-height: 100vh;
    }
    .login-form-side {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding-left: 5vw;
    }
    .login-form {
      width: 100%;
      max-width: 350px;
    }
    .login-illustration {
      min-height: 100vh;
      background: #f3e9f7;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
    }
    .login-illustration img {
      width: 100%;
      height: 100vh;
      object-fit: cover;
      object-position: center;
      display: block;
    }
    @media (max-width: 768px) {
      .login-illustration {
        display: none;
      }
      .login-form-side {
        justify-content: center;
        padding-left: 0;
      }
    }
  </style>
</head>
<body>
  <div class="container-fluid login-split">
    <div class="row min-vh-100">
      <!-- Left: Full Height Illustration (hidden on mobile) -->
      <div class="col-md-6 login-illustration p-0 d-none d-md-flex align-items-center">
        <img src="/undraw_fashion-photoshoot_zjiu.svg" alt="FashionDraw Illustration">
      </div>
      <!-- Right: Login Form Only -->
      <div class="col-12 col-md-6 login-form-side">
        <form class="login-form" method="POST" action="/login">
          <h2 class="fw-bold mb-4 text-center" style="letter-spacing:1px;">Login</h2>
          <div class="mb-3">
            <input type="text" class="form-control" name="username" placeholder="Username" required>
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="password" placeholder="Password" required>
          </div>
          <button class="btn btn-dark w-100 rounded-pill" type="submit">Login</button>
          <p class="mt-3 text-center">Don't have an account? <a href="/signup" class="text-decoration-none ">Sign Up</a></p>
        </form>
      </div>
    </div>
  </div>
</body>
</html>