<!DOCTYPE html>
<html>
<head>
  <title>Sign Up - FashonDraw</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #fde6f4 0%, #f9f6fb 100%);
    }
    .signup-split {
      min-height: 100vh;
    }
    .signup-form-side {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      padding-right: 5vw;
    }
    .signup-form {
      width: 100%;
      max-width: 350px;
    }
    .signup-illustration {
      min-height: 100vh;
      /* width: 100%; */
      background: #f3e9f7;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
    }
    .signup-illustration img {
      width: 100%;
      height: 100vh;
      object-fit: cover;
      object-position: center;
      display: block;
    }
    @media (max-width: 768px) {
      .signup-illustration {
        display: none;
      }
      .signup-form-side {
        justify-content: center;
        padding-right: 0;
      }
    }
  </style>
</head>
<body>
  <div class="container-fluid signup-split">
    <div class="row min-vh-100">
      <!-- Left: Signup Form Only -->
      <div class=" col-12 col-md-6 signup-form-side">
        <form class="signup-form" method="POST" action="/signup">
          <h2 class="fw-bold mb-4 text-center" style="letter-spacing:1px;">Create Your Account</h2>
          <div class="mb-3">
            <input type="text" class="form-control" name="username" placeholder="Username" required>
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" name="password" placeholder="Password" required>
          </div>
          <button class="btn btn-dark w-100 rounded-pill" type="submit">Sign Up</button>
          <p class="mt-3 text-center">Already have an account? <a href="/login" class="text-decoration-none">Login</a></p>
        </form>
      </div>
      <!-- Right: Full Height Illustration -->
      <div class="col-md-6 signup-illustration p-0 d-none d-md-flex align-items-center">
        <img src="/undraw_shopping_a55o.svg" alt="FashionDraw Illustration">
      </div>
    </div>
  </div>
</body>
</html>